<div class="min-h-screen flex items-center justify-center bg-gray-100">
  <div class="bg-white shadow-lg rounded-lg px-8 py-6 mx-4 sm:w-1/2 lg:w-1/3">
    <h2 class="text-2xl font-semibold mb-4">Registro de Ciudades</h2>

    <%= form_with(model: @city, url: city_parking_index_path, mthod: :post , local: true, class: "space-y-4") do |f| %>
      <div>
        <%= f.label :name, class: "block font-semibold text-gray-700" %>
        <%= f.text_field :name, class: "form-input mt-1 py-3 px-4 block w-full rounded-md shadow-sm border-gray-300 focus:border-blue-500 focus:ring-blue-500" %>
      </div>

      <div>
        <%= f.submit "Registrar", class: "bg-blue-500 text-white px-4 py-2 rounded-md hover:bg-blue-600 transition duration-200" %>
      </div>
    <% end %>
  </div>
</div>