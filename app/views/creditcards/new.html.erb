<section class="bg-gray-50 dark:bg-red-600">
  <div class="flex flex-col items-center justify-center px-6 py-8 mx-auto md:h-screen lg:py-0">
      <div class="w-full max-w-xs">
        <%= form_with url: creditcards_path, local: true, method: :post, class: "bg-white shadow-md rounded px-8 pt-6 pb-8 mb-4" do |f| %>
					<a href="#" class="flex items-center mb-6 text-2xl font-semibold text-gray-900 dark:text-black">
						Registra tu tarjeta de crÃ©dito
					</a>
					<div class="mb-4">
						<%= f.label :alias, class: "block text-gray-700 text-sm font-bold mb-2" %>
						<%= f.text_field :alias, class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline", name: "creditcard[alias]" %>
					</div>
					<div class="mb-4">
						<%= f.label :number_credit, class: "block text-gray-700 text-sm font-bold mb-2" %>
						<%= f.number_field :number_credit, class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline", name: "creditcard[number_credit]" %>
					</div>
					<div class="mb-6">
						<%= f.label :exp_date, class: "block text-gray-700 text-sm font-bold mb-2" %>
						<%= f.date_field :exp_date, class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline", name: "creditcard[exp_date]" %>
					</div>
					<div class="flex items-center justify-between">
						<%= f.submit "Agregar", class: "bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline" %>
					</div>
				<% end %>
      </div>
  </div>
</section>
