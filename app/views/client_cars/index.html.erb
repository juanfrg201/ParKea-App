<main class="bg-gray-200">
	<section id="servicios" class="container mx-auto py-12">
		<div class="flex flex-wrap">
			<div class="md:w-1/2 lg:w-2/3">
				<img class="h-auto" src="<%= image_path('Car_index.png') %>" alt="Imagen principal">
			</div>
			<div class="w-full md:w-1/2 lg:w-1/3">
				<div class="bg-white rounded-lg shadow overflow-hidden">
					<div class="bg-gray-200 px-4 py-3">
						<h2 class="text-xl font-semibold">Automoviles Registrados</h2>
					</div>
					<table class="min-w-full">
						<thead class="bg-gray-100">
							<tr>
								<th class="py-2 px-4">Placa</th>
								<th class="py-2 px-4">Marca</th>
								<th class="py-2 px-4">Referencia</th>
								<th class="py-2 px-4">Eliminar</th>
							</tr>
						</thead>
						<tbody>
							<% @client_cars.sort.each do |car| %>	
								<tr>
									<td class="py-2 px-4 text-center align-middle"><%= car.plate %></td>
									<td class="py-2 px-4 text-center align-middle"><%= car.brand %></td>
									<td class="py-2 px-4 text-center align-middle"><%= car.reference %></td>
									<td class="py-2 px-4 text-center align-middle">
										<%= button_to "Eliminar", client_car_path(car.id), method: :delete, data: { confirm: '¿Estás seguro de que quieres eliminar este tipo de estacionamiento?' }, class: "inline-block bg-red-500 hover:bg-red-600 text-white font-bold py-2 px-4 rounded-lg transition duration-200 ease-in-out" %>
									</td>
								</tr>
							<% end %>
							<!-- Agrega más filas de datos según sea necesario -->
						</tbody>
					</table>
				</div>
				<br>
				<div>
					<%= form_with(model: @client_car, url: client_cars_path, method: :post, class: "bg-gray-100 p-4 rounded-lg") do |form| %>
						<h2 class="text-lg font-semibold mb-4">Formulario</h2>
						<div class="mb-4">
							<%= form.label :plate, class: "block text-sm font-medium text-gray-700" %>
							<%= form.text_field :plate, class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" %>
						</div>
						<div class="mb-4">
							<%= form.label :brand, class: "block text-sm font-medium text-gray-700" %>
							<%= form.text_field :brand, class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" %>
						</div>
						<div class="mb-4">
							<%= form.label :reference, class: "block text-sm font-medium text-gray-700" %>
							<%= form.text_field :reference, class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" %>
						</div>
						<button type="submit" class="bg-blue-500 hover:bg-blue-600 text-white font-semibold py-2 px-4 rounded-md">Registrar Carro</button>
					<% end %>

				</div>
			</div>
		</div>

	</section>

</main>
