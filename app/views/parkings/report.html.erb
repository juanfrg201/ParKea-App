<div class="flex flex-col sm:flex-row min-h-screen">
  <!-- Sidebar -->
  <%= render partial: 'welcome_page/admin_bar' %> 
  <div class="w-full sm:w-3/4 p-8">
    <h2 class="text-2xl font-bold mb-4">Bienvenido al Panel de Reportes</h2>
    
    <div class="bg-gray-200 rounded-lg p-4">
      <div class="container mx-auto">
        <div class="container mx-auto px-4">
          <div class="flex flex-wrap">
            <h2 class="text-2xl font-bold mb-4">Exportar data de Parqueaderos</h2>
            
            <div class="mt-4 flex flex-wrap">
              <div class="w-full sm:w-1/2">
                <%= form_with url: statistics_parkings_path, method: :get, class: "flex items-center" do |form| %>
                  <%= form.select :filter_booking_table, options_for_select([['Fechas', 'date'], ['Parqueaderos', 'parking'], ['Estado', 'status']]), { include_blank: 'Todos' }, class: "px-4 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm" %>
                  <%= form.submit 'Exportar PDF', class: "ml-2 px-4 py-2 bg-blue-500 text-white rounded-md hover:bg-blue-600 transition-colors duration-300" %>
                <% end %>
              </div>
              
              <div class="w-full sm:w-1/2 mt-4 sm:mt-0">
